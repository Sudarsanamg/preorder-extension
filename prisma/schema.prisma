generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Store {
  id                        String                    @id @default(uuid())
  shopId                    String                    @unique
  currencyCode              String
  offlineToken              String?
  shopifyDomain             String                    @unique
  sendCustomEmail           Boolean                   @default(false)
  appInstalled              Boolean                   @default(true)
  ConfrimOrderEmailSettings Json?
  ShippingEmailSettings     Json?
  GeneralSettings           Json?
  EmailConfig               Json?
  SetupCompleted            Boolean                   @default(false)
  getDueByVault             Boolean                   @default(false)
  createdAt                 BigInt
  updatedAt                 BigInt
  vaultedPayment            VaultedPayment[]
  preorderCampaign          PreorderCampaign[]
  campaignOrders            CampaignOrders[]
  campaignProducts          PreorderCampaignProduct[]
}

model VaultedPayment {
  id              String         @id @default(uuid())
  orderId         String         @unique
  storeId         String
  campaignOrderId String         @unique
  amount          Decimal
  currencyCode    String
  mandateId       String
  dueDate         DateTime
  paymentStatus   PaymentStatus
  createdAt       BigInt
  updatedAt       BigInt
  store           Store          @relation(fields: [storeId], references: [id])
  campaignOrder   CampaignOrders @relation("OrderVaultedPayment", fields: [campaignOrderId], references: [id])

  @@unique([orderId, storeId])
}

model PreorderCampaign {
  id                      String                    @id @default(uuid())
  storeId                 String
  name                    String
  campaignType            CampaignType              @default(ALWAYS)
  paymentType             PaymentMode?
  depositPercent          Int?
  balanceDueDate          DateTime?
  status                  CampaignStatus            @default(DRAFT)
  campaignEndDate         DateTime
  totalOrders             Int                       @default(0)
  orderTags               Json?
  customerTags            Json?
  discountType            DiscountType              @default(NONE)
  discountValue           Float?
  fulfilmentmode          Fulfilmentmode?
  scheduledFulfilmentType scheduledFulfilmentType?
  fulfilmentDaysAfter     Int?
  fulfilmentExactDate     DateTime?
  createdAt               BigInt
  updatedAt               BigInt
  products                PreorderCampaignProduct[]
  store                   Store                     @relation(fields: [storeId], references: [id])
  orders                  OrderCampaignMapping[]
}

model PreorderCampaignProduct {
  id           String           @id @default(uuid())
  campaignId   String
  storeId      String           @default("Invalid store")
  productId    String
  variantId    String
  variantTitle String
  price        Decimal
  imageUrl     String?
  maxQuantity  Int?
  soldQuantity Int              @default(0)
  createdAt    BigInt
  updatedAt    BigInt
  campaign     PreorderCampaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  store        Store            @relation(fields: [storeId], references: [id])
}

model CampaignOrders {
  id               String                 @id @default(uuid())
  storeId          String
  orderNumber      Int
  orderId          String                 @unique
  draftOrderId     String?                @unique
  customerEmail    String                 @default("")
  dueDate          DateTime?
  totalAmount      Decimal?
  balanceAmount    Decimal?
  currency         String?
  paymentStatus    PaymentStatus
  fulfilmentStatus FulfillmentStatus?
  store            Store                  @relation(fields: [storeId], references: [id])
  createdAt        BigInt
  updatedAt        BigInt
  vaultedPayment   VaultedPayment?        @relation("OrderVaultedPayment")
  campaigns        OrderCampaignMapping[]

  @@unique([storeId, orderId])
  @@unique([storeId, draftOrderId])
}

model OrderCampaignMapping {
  id           String           @id @default(uuid())
  orderId      String
  campaignId   String
  storeId      String          
  productId    String           
  variantId    String           
  variantTitle String           
  quantity     Int              
  price        Decimal          
  createdAt    BigInt          
  updatedAt    BigInt          
  order        CampaignOrders   @relation(fields: [orderId], references: [id])
  campaign     PreorderCampaign @relation(fields: [campaignId], references: [id])

}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  CANCELLED
}

enum DiscountType {
  NONE
  FIXED
  PERCENTAGE
}

enum CampaignStatus {
  DRAFT
  PUBLISHED
  UNPUBLISH
  ARCHIVED
}

enum Fulfilmentmode {
  ONHOLD
  UNFULFILED
  SCHEDULED
}

enum scheduledFulfilmentType {
  DAYS_AFTER
  EXACT_DATE
}

enum PaymentMode {
  FULLPAYMENT
  PARTIALPAYMENT
}

enum FulfillmentStatus {
  UNFULFILLED
  ON_HOLD
  FULFILLED
}

enum CampaignType {
  OUT_OF_STOCK
  ALWAYS
  IN_STOCK
}
